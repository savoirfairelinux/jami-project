#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_configure:
	pwd && ls -la
	./configure \
		-opensource \
		-confirm-license \
		-nomake examples \
		-nomake tests \
		-prefix "/opt/qt-jami"

override_dh_auto_build:
	dh_auto_build
	pwd
	ls -la debian/*
	ls -la /opt/qt-jami
