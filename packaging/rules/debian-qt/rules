#!/usr/bin/make -f
# -*- makefile -*-

# export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_configure:
	./configure \
		-opensource \
		-confirm-license \
		-nomake examples \
		-nomake tests \
		-prefix "/usr" \
		-libdir "/usr/lib/qt-jami" \
		-bindir "/usr/lib/qt-jami/bin" \
		-headerdir "/usr/include/qt-jami" \
		-archdatadir "/usr/lib/qt-jami" \
		-datadir "/usr/share/qt-jami" \
		-sysconfdir "/etc/xdg/qt-jami" \
		-hostdatadir "/usr/lib/qt-jami"

override_dh_auto_install:
	dh_auto_install -Smakefile -- INSTALL_ROOT=$(CURDIR)/debian/tmp/
