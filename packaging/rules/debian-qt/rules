#!/usr/bin/make -f
# -*- makefile -*-

# export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_configure:
	./configure \
		-opensource \
		-confirm-license \
		-nomake examples \
		-nomake tests \
		-prefix "/opt/qt-jami"

override_dh_auto_install:
	dh_auto_install -Smakefile -- INSTALL_ROOT=$(CURDIR)/debian/tmp/
